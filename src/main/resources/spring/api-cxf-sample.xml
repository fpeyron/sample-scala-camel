<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:cxfrs="http://cxf.apache.org/jaxrs"
       xmlns:camelcxf="http://camel.apache.org/schema/cxf"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
               http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
               http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd">


    <bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider" />
    <bean id="jsonContextResolver" class="fr.sysf.sample.util.JacksonContextResolver" />

    <bean id="sampleApiService" class="fr.sysf.sample.service.CustomerApiService"/>

    <bean id="loggingOutInterceptor" class="org.apache.cxf.interceptor.LoggingOutInterceptor" />
    <bean id="loggingInInterceptor" class="org.apache.cxf.interceptor.LoggingInInterceptor" />

    <bean id="swagger2Feature" class="org.apache.cxf.jaxrs.swagger.Swagger2Feature">
        <property name="version" value="1.0"/>
        <property name="title" value="API BUS SAMPLE"/>
        <property name="contact" value="middle@sysf.fr"/>
        <property name="description" value="Some custom description of API.&lt;br/&gt;todo"/>
        <property name="dynamicBasePath" value="false"/>
        <property name="basePath" value="/api/v1"/>
        <property name="resourcePackage" value="fr.sysf.sample.service"/>
    </bean>


    <!-- Camel CXF Endpoint: not generating JSON for the API -->
    <camelcxf:rsServer id="v1ApiService" address="/v1">
        <camelcxf:serviceBeans>
            <list>
                <ref bean="sampleApiService"/>
            </list>
        </camelcxf:serviceBeans>
        <camelcxf:providers>
            <ref bean="jsonProvider" />
            <ref bean="jsonContextResolver" />
        </camelcxf:providers>
        <camelcxf:features/>
        <camelcxf:outInterceptors>
            <ref bean="loggingOutInterceptor" />
        </camelcxf:outInterceptors>
        <camelcxf:inInterceptors>
            <ref bean="loggingInInterceptor" />
        </camelcxf:inInterceptors>
    </camelcxf:rsServer>

    <!-- "Swagger/normal" CXF Endpoint: generating JSON for the API -->
    <cxfrs:server id="docServer" address="/docs">
        <cxfrs:serviceBeans>
            <ref bean="sampleApiService"/>
        </cxfrs:serviceBeans>
        <cxfrs:providers>
            <ref bean="jsonProvider"/>
        </cxfrs:providers>
        <cxfrs:features>
            <ref bean="swagger2Feature"/>
        </cxfrs:features>
    </cxfrs:server>

</beans>